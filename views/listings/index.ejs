<% layout("Layouts/boilerplate") %>
<style>
/* Default styles */
.filter {
    margin-top: 1rem;
    text-align: center;
    margin-right: 2rem;
    opacity: 0.7;
}

.filter:hover {
    opacity: 1;
    cursor: pointer;
}

#filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center; /* Added for centering on smaller screens */
}

.filter p {
    font-size: 0.8rem;
}

.tax-info {
    display: none;
}

.tax-switch {
    border: 1px solid black;
    border-radius: 2.5rem;
    padding: 1rem;
    height: 3.25rem;
    margin-left: 5rem;
    display: flex;
    align-items: center;
}

/* Media queries for responsive design */

/* Small screens (e.g., phones) */
@media (max-width: 576px) {
    .filter {
        margin-right: 1rem;
        font-size: 0.9rem;
    }

    .tax-switch {
        margin-left: 1rem;
    }
}

/* Medium screens (e.g., tablets) */
@media (min-width: 577px) and (max-width: 992px) {
    .filter {
        margin-right: 1.5rem;
    }

    .tax-switch {
        margin-left: 3rem;
    }
}

/* Large screens (e.g., desktops) */
@media (min-width: 993px) {
    .filter {
        margin-right: 2rem;
    }

    .tax-switch {
        margin-left: 5rem;
    }
}

</style>

