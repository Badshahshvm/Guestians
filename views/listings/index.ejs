<script>
  // Assuming you have an input with id="flexSwitchCheckDefault"
  let priceSwitch = document.getElementById("flexSwitchCheckDefault");

  priceSwitch.addEventListener("click", () => {
    // Get all elements with class "tax-info"
    let tax = document.getElementsByClassName("tax-info");

    // Iterate through each element with class "tax-info"
    for (let info of tax) {
      // Toggle display property based on its current state
      if (info.style.display!="inline") {
        info.style.display = "inline"; // Show element
      } else {
        info.style.display = "none"; // Hide element
      }
    }
  });
</script>
